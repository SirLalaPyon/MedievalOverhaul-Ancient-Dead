<Defs>

  <!-- ================================== Helmets ====================================-->

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>DankPyon_Apparel_AncientSkullCap</defName>
    <label>ancient skull cap</label>
    <description>An ancient light helmet that time has taken a toll on over many years.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Apparel/AncientSkullCap/AncientSkullCap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.4</uiIconScale>
    <costList>
      <Steel>40</Steel>
    </costList>
    <statBases>
      <WorkToMake>3200</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/AncientSkullCap/AncientSkullCap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>AncientAuxiliary</li>
        <li>AncientLegionary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
